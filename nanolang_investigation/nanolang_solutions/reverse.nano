fn reverse_string(s: string) -> string {
    let mut reversed_s: string = ""
    let mut i: int = (- (strlen s) 1)
    while (>= i 0) {
        set reversed_s (str_concat reversed_s (str_char_at s i))
        set i (- i 1)
    }
    return reversed_s
}

shadow reverse_string {
    assert (str_equals (reverse_string "hello") "olleh")
}

fn main() -> int {
    (println (reverse_string "hello"))
    return 0
}

shadow main {
    assert true
